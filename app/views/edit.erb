<div class="container">
<h1><center>Edit</center></h1>
<form method="post" action="/new_post">
  <label for="post_title">Title:</label>
  <input id="post_title" name="title" value="<%= @post.title%>"><br><br>

  <label for="post_content">Post:</label>
  <textarea name="content"><%=@post.content%></textarea><br><br>

  <label for="post_tags">Tags:</label>
  <input id="post_tags" value = "<%= @post.tags.map {|x| x.word}.join(",") %>"name="tags">
  <input type="hidden" name="id" value=<%= @post.id %> >
  <input type="submit" value="Post">
</form><br>

</div>
